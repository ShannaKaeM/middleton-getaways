{
  "name": "umbral-editor",
  "version": "1.0.0",
  "description": "CMB2 Components Field extension with React-based UI and flexible content management",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && vite build --config vite.components.config.js && vite build --config vite.frontend.config.js",
    "build:watch": "vite build --watch",
    "build:components": "vite build --config vite.components.config.js",
    "build:components:watch": "vite build --config vite.components.config.js --watch",
    "build:frontend": "vite build --config vite.frontend.config.js",
    "build:frontend:watch": "vite build --config vite.frontend.config.js --watch",
    "preview": "vite preview"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "react",
    "cmb2",
    "flexible-content",
    "components-field",
    "shadow-dom"
  ],
  "author": "Daniel Snell @Umbral.ai",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "terser": "^5.40.0",
    "vite": "^5.1.0"
  },
  "dependencies": {
    "@r2wc/react-to-web-component": "^2.0.3",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "framer-motion": "^11.0.3",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.3.8"
  }
}
