<div class="colors-editor">
    <div class="editor-header">
        <h1>Color Primitive Editor</h1>
        <div class="editor-actions">
            <button class="btn-save" id="save-colors">Save Colors</button>
            <button class="btn-sync" id="sync-colors">Sync to Theme</button>
            <button class="btn-reset" id="reset-colors">Reset to Defaults</button>
            <button class="btn-export" id="export-colors">Export JSON</button>
        </div>
    </div>

    <div class="editor-body">
        <div class="color-primitives-section">
            <h2>Color Primitives</h2>
            <div class="token-grid">
                {% for slug, value in colors %}
                    <div class="token-item" data-token="{{ slug }}">
                        <div class="color-preview-container">
                            <div class="color-preview" style="background-color: {{ value }};">
                                <div class="color-overlay">
                                    <button class="copy-btn" data-copy="{{ value }}" title="Copy hex value">
                                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                                            <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="token-controls">
                            <label class="token-label">{{ slug|replace({'_': ' ', '-': ' '})|title }}</label>
                            <input type="text" class="hex-input" value="{{ value }}" data-token="{{ slug }}" pattern="^#[0-9A-Fa-f]{6}$" placeholder="#000000">
                            <input type="color" class="color-picker" value="{{ value }}" data-token="{{ slug }}">
                            <button class="copy-btn" data-copy="{{ value }}" title="Copy Hex"><svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-copy"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg></button>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="color-preview-section">
            <h2>Preview</h2>
            <div class="preview-controls">
                <label for="color-preview-type">Preview Type:</label>
                <select id="color-preview-type">
                    <option value="palette">Color Palette</option>
                    <option value="ui-elements">UI Elements</option>
                    <option value="typography-on-color">Typography on Color</option>
                </select>
            </div>
            <div class="preview-panels">
                <div id="palette-preview" class="preview-panel">
                    <h3>Color Palette</h3>
                    <div class="palette-grid">
                        {% for slug, value in colors %}
                            <div class="palette-item" style="background-color: var(--colors-{{ slug }});">
                                <span class="palette-label">{{ slug|replace({'_': ' ', '-': ' '})|title }}</span>
                                <span class="palette-value">var(--colors-{{ slug }})</span>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div id="ui-elements-preview" class="preview-panel" style="display: none;">
                    <h3>UI Elements</h3>
                    <div class="ui-elements-grid">
                        <button class="ui-button primary">Primary Button</button>
                        <button class="ui-button secondary">Secondary Button</button>
                        <div class="ui-card">
                            <h4>Card Title</h4>
                            <p>This is some card content.</p>
                        </div>
                    </div>
                </div>
                <div id="typography-on-color-preview" class="preview-panel" style="display: none;">
                    <h3>Typography on Color</h3>
                    <div class="typography-on-color-grid">
                        <div class="typography-item" style="background-color: var(--colors-primary); color: var(--colors-on-primary);">
                            <p class="typography-label">Primary Background</p>
                            <h1 style="color: var(--colors-on-primary);">Headline 1</h1>
                            <p style="color: var(--colors-on-primary);">Body text on primary background.</p>
                        </div>
                        <div class="typography-item" style="background-color: var(--colors-secondary); color: var(--colors-on-secondary);">
                            <p class="typography-label">Secondary Background</p>
                            <h1 style="color: var(--colors-on-secondary);">Headline 1</h1>
                            <p style="color: var(--colors-on-secondary);">Body text on secondary background.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
