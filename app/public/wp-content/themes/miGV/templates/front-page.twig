{% extends "base.twig" %}

{% block content %}
    {# Hero Section #}
    {% include 'component-books/hero-book.twig' with {
        variant: 'furniture',
        title: hero_title,
        subtitle: hero_subtitle,
        description: hero_description,
        furniture_gallery: furniture_gallery,
        actions: [
            {label: 'Learn More', variant: 'primary', href: '/about'}
        ],
        background_color: 'extreme-light',
        height: 'large',
        alignment: 'left',
        title_color: 'extreme-dark',
        title_size: 'xx-large',
        title_weight: 'bold',
        description_color: 'base-dark'
    } %}

    {# Featured Properties Section (uncomment when you have properties) #}
    {# {% if featured_properties %}
        <section class="featured-properties">
            <div class="section-header">
                <h2>Featured Properties</h2>
                <p>Discover our hand-picked vacation rentals</p>
            </div>
            
            <div class="properties-grid">
                {% for property in featured_properties %}
                    <article class="property-card">
                        {% if property.thumbnail %}
                            <div class="property-image">
                                <img src="{{ property.thumbnail.src }}" alt="{{ property.title }}">
                            </div>
                        {% endif %}
                        
                        <div class="property-content">
                            <h3><a href="{{ property.link }}">{{ property.title }}</a></h3>
                            <p>{{ property.preview.strip }}</p>
                            <a href="{{ property.link }}" class="btn-link">View Details →</a>
                        </div>
                    </article>
                {% endfor %}
            </div>
        </section>
    {% endif %} #}

    {# About Section #}
    <section class="home-about" style="
        {%- include 'primitive-books/spacing-book.twig' with {
            padding_top: '7xl',
            padding_bottom: '7xl'
        } only -%}
        {%- include 'primitive-books/color-book.twig' with {
            background_color: 'base-lightest'
        } only -%}
    ">
        <div class="container" style="
            {%- include 'primitive-books/layout-book.twig' with {
                container: 'xl'
            } only -%}
            margin: 0 auto;
            padding: 0 var(--wp--custom--layout--spacing--xl);
        ">
            <h2 style="
                {%- include 'primitive-books/typography-book.twig' with {
                    font_family: 'montserrat',
                    font_size: 'xx-large',
                    font_weight: 'bold',
                    color: 'extreme-dark'
                } only -%}
                text-align: center;
                {%- include 'primitive-books/spacing-book.twig' with {
                    margin_bottom: '2xl'
                } only -%}
            ">Welcome to Middleton Getaways</h2>
            <p style="
                {%- include 'primitive-books/typography-book.twig' with {
                    font_family: 'montserrat',
                    font_size: 'large',
                    line_height: 'relaxed',
                    color: 'base-dark'
                } only -%}
                text-align: center;
                max-width: 800px;
                margin: 0 auto;
                {%- include 'primitive-books/spacing-book.twig' with {
                    margin_bottom: '5xl'
                } only -%}
            ">Experience the perfect vacation rental in beautiful Middleton. Whether you're looking for a cozy cottage, a spacious family home, or a luxurious retreat, we have the perfect property for your stay.</p>
            
            <div class="features-grid" style="
                {%- include 'primitive-books/layout-book.twig' with {
                    grid_columns: 'auto-fit',
                    grid_gap: '2xl'
                } only -%}
            ">
                {% set features = [
                    {
                        title: 'Local Expertise',
                        description: 'Our team knows Middleton inside and out, ensuring you get the best recommendations and support.'
                    },
                    {
                        title: 'Quality Properties',
                        description: 'Every property is carefully selected and maintained to the highest standards.'
                    },
                    {
                        title: 'Exceptional Service',
                        description: 'From booking to check-out, we\'re here to make your stay unforgettable.'
                    }
                ] %}
                
                {% for feature in features %}
                    <div class="feature" style="
                        {%- include 'primitive-books/color-book.twig' with {
                            background_color: 'extreme-light'
                        } only -%}
                        {%- include 'primitive-books/spacing-book.twig' with {
                            padding: '3xl'
                        } only -%}
                        {%- include 'primitive-books/border-book.twig' with {
                            radius: 'lg'
                        } only -%}
                        {%- include 'primitive-books/shadow-book.twig' with {
                            shadow: 'md'
                        } only -%}
                    ">
                        <h3 style="
                            {%- include 'primitive-books/typography-book.twig' with {
                                font_family: 'montserrat',
                                font_size: 'large',
                                font_weight: 'semiBold',
                                color: 'primary'
                            } only -%}
                            {%- include 'primitive-books/spacing-book.twig' with {
                                margin_bottom: 'lg'
                            } only -%}
                        ">{{ feature.title }}</h3>
                        <p style="
                            {%- include 'primitive-books/typography-book.twig' with {
                                font_family: 'montserrat',
                                font_size: 'medium',
                                line_height: 'relaxed',
                                color: 'base-dark'
                            } only -%}
                        ">{{ feature.description }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    {# Recent Blog Posts #}
    {% if recent_posts %}
        <section class="recent-posts" style="
            {%- include 'primitive-books/spacing-book.twig' with {
                padding_top: '7xl',
                padding_bottom: '7xl'
            } only -%}
        ">
            <div class="container" style="
                {%- include 'primitive-books/layout-book.twig' with {
                    container: 'xl'
                } only -%}
                margin: 0 auto;
                padding: 0 var(--wp--custom--layout--spacing--xl);
            ">
                <div class="section-header" style="
                    text-align: center;
                    {%- include 'primitive-books/spacing-book.twig' with {
                        margin_bottom: '5xl'
                    } only -%}
                ">
                    <h2 style="
                        {%- include 'primitive-books/typography-book.twig' with {
                            font_family: 'montserrat',
                            font_size: 'xx-large',
                            font_weight: 'bold',
                            color: 'extreme-dark'
                        } only -%}
                        {%- include 'primitive-books/spacing-book.twig' with {
                            margin_bottom: 'lg'
                        } only -%}
                    ">Latest News & Tips</h2>
                    <p style="
                        {%- include 'primitive-books/typography-book.twig' with {
                            font_family: 'montserrat',
                            font_size: 'large',
                            color: 'base-dark'
                        } only -%}
                    ">Stay updated with local events and travel tips</p>
                </div>
                
                <div class="posts-grid" style="
                    {%- include 'primitive-books/layout-book.twig' with {
                        grid_columns: 'auto-fit',
                        grid_gap: '2xl'
                    } only -%}
                ">
                    {% for post in recent_posts %}
                        {% include 'component-books/card-book.twig' with {
                            variant: 'default',
                            title: post.title,
                            description: post.preview.strip,
                            image: post.thumbnail ? post.thumbnail.src('medium') : null,
                            link: post.link,
                            meta: [
                                {icon: 'calendar', value: post.date}
                            ],
                            actions: [
                                {label: 'Read More →', variant: 'ghost', href: post.link}
                            ]
                        } %}
                    {% endfor %}
                </div>
                
                <div class="section-footer" style="
                    text-align: center;
                    {%- include 'primitive-books/spacing-book.twig' with {
                        margin_top: '5xl'
                    } only -%}
                ">
                    {% include 'element-books/button-book.twig' with {
                        label: 'View All Posts',
                        variant: 'outline',
                        href: '/blog',
                        size: 'large'
                    } %}
                </div>
            </div>
        </section>
    {% endif %}

    {# Call to Action #}
    {% include 'component-books/hero-book.twig' with {
        variant: 'gradient',
        title: 'Ready to Book Your Next Getaway?',
        description: 'Browse our collection of beautiful vacation rentals and find your perfect home away from home.',
        actions: [
            {label: 'Browse Properties', variant: 'primary', href: '/properties', size: 'large'}
        ],
        gradient_start: 'primary',
        gradient_end: 'secondary-dark',
        height: 'medium',
        class: 'home-cta'
    } %}
{% endblock %}