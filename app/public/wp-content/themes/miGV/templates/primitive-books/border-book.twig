{#
  Border Primitive Book - Self-Sufficient Design Tokens
  
  This primitive contains actual border values, not CSS variable references.
  It is the single source of truth for borders in the design system.
  
  Usage:
  {% include 'primitive-books/border-book.twig' with {
    border_width: 'thin',
    border_style: 'solid',
    border_color: 'neutral-light',
    border_radius: 'md'
  } %}
#}

{% set border_tokens = {
  widths: {
    none: '0',
    thin: '1px',
    medium: '2px',
    thick: '3px',
    heavy: '4px'
  },
  radius: {
    none: '0',
    sm: '4px',
    md: '6px',
    lg: '8px',
    xl: '12px',
    '2xl': '16px',
    '3xl': '24px',
    full: '9999px'
  },
  styles: {
    none: 'none',
    solid: 'solid',
    dashed: 'dashed',
    dotted: 'dotted',
    double: 'double',
    groove: 'groove',
    ridge: 'ridge',
    inset: 'inset',
    outset: 'outset'
  }
} %}

{# Import color tokens for border colors #}
{% set color_tokens = {
  colors: {
    'primary-light': '#d6dcd6',
    'primary': '#5a7b7c',
    'primary-dark': '#3a5a59',
    'secondary-light': '#c38484',
    'secondary': '#975d55',
    'secondary-dark': '#853d2d',
    'neutral-light': '#d1cfc2',
    'neutral': '#b5b09f',
    'neutral-dark': '#9e9983',
    'base-lightest': '#e6e6e6',
    'base-light': '#b3b3b3',
    'base': '#808080',
    'base-dark': '#676765',
    'base-darkest': '#4d4d4d',
    'extreme-light': '#ffffff',
    'extreme-dark': '#000000'
  }
} %}

{# Apply border styles based on parameters #}
{% if border %}
  border: {{ border }};
{% endif %}

{% if border_width %}
  border-width: {{ border_tokens.widths[border_width] ?? border_width }};
{% endif %}

{% if border_style %}
  border-style: {{ border_tokens.styles[border_style] ?? border_style }};
{% endif %}

{% if border_color %}
  border-color: {{ color_tokens.colors[border_color] ?? border_color }};
{% endif %}

{% if border_radius %}
  border-radius: {{ border_tokens.radius[border_radius] ?? border_radius }};
{% endif %}

{# Individual side properties #}
{% if border_top_width %}
  border-top-width: {{ border_tokens.widths[border_top_width] ?? border_top_width }};
{% endif %}

{% if border_top_style %}
  border-top-style: {{ border_tokens.styles[border_top_style] ?? border_top_style }};
{% endif %}

{% if border_top_color %}
  border-top-color: {{ color_tokens.colors[border_top_color] ?? border_top_color }};
{% endif %}

{% if border_right_width %}
  border-right-width: {{ border_tokens.widths[border_right_width] ?? border_right_width }};
{% endif %}

{% if border_right_style %}
  border-right-style: {{ border_tokens.styles[border_right_style] ?? border_right_style }};
{% endif %}

{% if border_right_color %}
  border-right-color: {{ color_tokens.colors[border_right_color] ?? border_right_color }};
{% endif %}

{% if border_bottom_width %}
  border-bottom-width: {{ border_tokens.widths[border_bottom_width] ?? border_bottom_width }};
{% endif %}

{% if border_bottom_style %}
  border-bottom-style: {{ border_tokens.styles[border_bottom_style] ?? border_bottom_style }};
{% endif %}

{% if border_bottom_color %}
  border-bottom-color: {{ color_tokens.colors[border_bottom_color] ?? border_bottom_color }};
{% endif %}

{% if border_left_width %}
  border-left-width: {{ border_tokens.widths[border_left_width] ?? border_left_width }};
{% endif %}

{% if border_left_style %}
  border-left-style: {{ border_tokens.styles[border_left_style] ?? border_left_style }};
{% endif %}

{% if border_left_color %}
  border-left-color: {{ color_tokens.colors[border_left_color] ?? border_left_color }};
{% endif %}

{# Individual corner radius #}
{% if border_top_left_radius %}
  border-top-left-radius: {{ border_tokens.radius[border_top_left_radius] ?? border_top_left_radius }};
{% endif %}

{% if border_top_right_radius %}
  border-top-right-radius: {{ border_tokens.radius[border_top_right_radius] ?? border_top_right_radius }};
{% endif %}

{% if border_bottom_right_radius %}
  border-bottom-right-radius: {{ border_tokens.radius[border_bottom_right_radius] ?? border_bottom_right_radius }};
{% endif %}

{% if border_bottom_left_radius %}
  border-bottom-left-radius: {{ border_tokens.radius[border_bottom_left_radius] ?? border_bottom_left_radius }};
{% endif %}