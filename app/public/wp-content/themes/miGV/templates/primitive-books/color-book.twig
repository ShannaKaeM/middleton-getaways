{#
  Color Primitive Book - Pure Design Tokens
  
  This primitive provides pure color design tokens from theme.json.
  It should ONLY contain foundational color properties, no semantic styling.
  
  Color scheme:
  - Primary (light, default, dark)
  - Secondary (light, default, dark)
  - Neutral (light, default, dark)
  - Base (lightest, light, default, dark, darkest)
  - Extreme (light, dark)
  
  Usage:
  {% include 'primitive-books/color-book.twig' with {
    color: 'primary',
    background_color: 'base-lightest',
    border_color: 'neutral-light'
  } %}
#}

{% set color_tokens = {
  colors: {
    'primary-light': 'var(--wp--preset--color--primary-light)',
    'primary': 'var(--wp--preset--color--primary)',
    'primary-dark': 'var(--wp--preset--color--primary-dark)',
    'secondary-light': 'var(--wp--preset--color--secondary-light)',
    'secondary': 'var(--wp--preset--color--secondary)',
    'secondary-dark': 'var(--wp--preset--color--secondary-dark)',
    'neutral-light': 'var(--wp--preset--color--neutral-light)',
    'neutral': 'var(--wp--preset--color--neutral)',
    'neutral-dark': 'var(--wp--preset--color--neutral-dark)',
    'base-lightest': 'var(--wp--preset--color--base-lightest)',
    'base-light': 'var(--wp--preset--color--base-light)',
    'base': 'var(--wp--preset--color--base)',
    'base-dark': 'var(--wp--preset--color--base-dark)',
    'base-darkest': 'var(--wp--preset--color--base-darkest)',
    'extreme-light': 'var(--wp--preset--color--extreme-light)',
    'extreme-dark': 'var(--wp--preset--color--extreme-dark)'
  }
} %}

{# Apply color styles based on parameters #}
{% if color %}
  color: {{ color_tokens.colors[color] ?? color }};
{% endif %}

{% if background_color %}
  background-color: {{ color_tokens.colors[background_color] ?? background_color }};
{% endif %}

{% if border_color %}
  border-color: {{ color_tokens.colors[border_color] ?? border_color }};
{% endif %}

{% if outline_color %}
  outline-color: {{ color_tokens.colors[outline_color] ?? outline_color }};
{% endif %}

{% if text_decoration_color %}
  text-decoration-color: {{ color_tokens.colors[text_decoration_color] ?? text_decoration_color }};
{% endif %}

{% if fill %}
  fill: {{ color_tokens.colors[fill] ?? fill }};
{% endif %}

{% if stroke %}
  stroke: {{ color_tokens.colors[stroke] ?? stroke }};
{% endif %}