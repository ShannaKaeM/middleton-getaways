{#
  Color Primitive Book - Self-Sufficient Design Tokens
  
  This primitive loads actual color values from JSON file.
  It is the single source of truth for colors in the design system.
  
  Color scheme:
  - Primary (light, default, dark)
  - Secondary (light, default, dark)
  - Neutral (light, default, dark)
  - Base (lightest, light, default, dark, darkest)
  - Extreme (light, dark)
  
  Usage:
  {% include 'primitive-books/color-book.twig' with {
    color: 'primary',
    background_color: 'base-lightest',
    border_color: 'neutral-light'
  } %}
#}

{# Load color tokens from JSON #}
{% set color_tokens = load_primitive('colors') %}

{# Apply color styles based on parameters #}
{% if color %}
  color: {{ color_tokens.colors[color] ?? color }};
{% endif %}

{% if background_color %}
  background-color: {{ color_tokens.colors[background_color] ?? background_color }};
{% endif %}

{% if border_color %}
  border-color: {{ color_tokens.colors[border_color] ?? border_color }};
{% endif %}

{% if outline_color %}
  outline-color: {{ color_tokens.colors[outline_color] ?? outline_color }};
{% endif %}

{% if text_decoration_color %}
  text-decoration-color: {{ color_tokens.colors[text_decoration_color] ?? text_decoration_color }};
{% endif %}

{% if fill %}
  fill: {{ color_tokens.colors[fill] ?? fill }};
{% endif %}

{% if stroke %}
  stroke: {{ color_tokens.colors[stroke] ?? stroke }};
{% endif %}