{#
  Layout Primitive Book - Pure Design Tokens
  
  This primitive provides pure layout design tokens from theme.json.
  It should ONLY contain foundational layout properties, no semantic styling.
  
  Usage:
  {% include 'primitive-books/layout-book.twig' with {
    display: 'grid',
    grid_template_columns: '3',
    gap: 'lg',
    justify_content: 'center',
    align_items: 'start'
  } %}
#}

{% set layout_tokens = {
  container: {
    sm: 'var(--wp--custom--layout--container--sm)',
    md: 'var(--wp--custom--layout--container--md)',
    lg: 'var(--wp--custom--layout--container--lg)',
    xl: 'var(--wp--custom--layout--container--xl)',
    '2xl': 'var(--wp--custom--layout--container--2xl)',
    fluid: 'var(--wp--custom--layout--container--fluid)'
  },
  grid_columns: {
    '1': 'var(--wp--custom--layout--grid--columns--1)',
    '2': 'var(--wp--custom--layout--grid--columns--2)',
    '3': 'var(--wp--custom--layout--grid--columns--3)',
    '4': 'var(--wp--custom--layout--grid--columns--4)',
    '6': 'var(--wp--custom--layout--grid--columns--6)',
    '12': 'var(--wp--custom--layout--grid--columns--12)',
    'auto-fit': 'var(--wp--custom--layout--grid--columns--auto-fit)',
    'auto-fill': 'var(--wp--custom--layout--grid--columns--auto-fill)'
  },
  gaps: {
    none: 'var(--wp--custom--layout--grid--gaps--none)',
    xs: 'var(--wp--custom--layout--grid--gaps--xs)',
    sm: 'var(--wp--custom--layout--grid--gaps--sm)',
    md: 'var(--wp--custom--layout--grid--gaps--md)',
    lg: 'var(--wp--custom--layout--grid--gaps--lg)',
    xl: 'var(--wp--custom--layout--grid--gaps--xl)',
    '2xl': 'var(--wp--custom--layout--grid--gaps--2xl)'
  },
  flex_justify: {
    start: 'var(--wp--custom--layout--flexbox--justify--start)',
    end: 'var(--wp--custom--layout--flexbox--justify--end)',
    center: 'var(--wp--custom--layout--flexbox--justify--center)',
    between: 'var(--wp--custom--layout--flexbox--justify--between)',
    around: 'var(--wp--custom--layout--flexbox--justify--around)',
    evenly: 'var(--wp--custom--layout--flexbox--justify--evenly)'
  },
  flex_align: {
    start: 'var(--wp--custom--layout--flexbox--align--start)',
    end: 'var(--wp--custom--layout--flexbox--align--end)',
    center: 'var(--wp--custom--layout--flexbox--align--center)',
    baseline: 'var(--wp--custom--layout--flexbox--align--baseline)',
    stretch: 'var(--wp--custom--layout--flexbox--align--stretch)'
  },
  flex_direction: {
    row: 'var(--wp--custom--layout--flexbox--direction--row)',
    'row-reverse': 'var(--wp--custom--layout--flexbox--direction--row-reverse)',
    col: 'var(--wp--custom--layout--flexbox--direction--col)',
    'col-reverse': 'var(--wp--custom--layout--flexbox--direction--col-reverse)'
  },
  flex_wrap: {
    wrap: 'var(--wp--custom--layout--flexbox--wrap--wrap)',
    nowrap: 'var(--wp--custom--layout--flexbox--wrap--nowrap)',
    'wrap-reverse': 'var(--wp--custom--layout--flexbox--wrap--wrap-reverse)'
  },
  z_index: {
    auto: 'var(--wp--custom--layout--z-index--auto)',
    '0': 'var(--wp--custom--layout--z-index--0)',
    '10': 'var(--wp--custom--layout--z-index--10)',
    '20': 'var(--wp--custom--layout--z-index--20)',
    '30': 'var(--wp--custom--layout--z-index--30)',
    '40': 'var(--wp--custom--layout--z-index--40)',
    '50': 'var(--wp--custom--layout--z-index--50)',
    dropdown: 'var(--wp--custom--layout--z-index--dropdown)',
    sticky: 'var(--wp--custom--layout--z-index--sticky)',
    fixed: 'var(--wp--custom--layout--z-index--fixed)',
    'modal-backdrop': 'var(--wp--custom--layout--z-index--modal-backdrop)',
    modal: 'var(--wp--custom--layout--z-index--modal)',
    popover: 'var(--wp--custom--layout--z-index--popover)',
    tooltip: 'var(--wp--custom--layout--z-index--tooltip)'
  },
  aspect_ratio: {
    square: 'var(--wp--custom--layout--aspect-ratio--square)',
    video: 'var(--wp--custom--layout--aspect-ratio--video)',
    '4/3': 'var(--wp--custom--layout--aspect-ratio--4\/3)',
    '3/2': 'var(--wp--custom--layout--aspect-ratio--3\/2)',
    '5/4': 'var(--wp--custom--layout--aspect-ratio--5\/4)',
    golden: 'var(--wp--custom--layout--aspect-ratio--golden)'
  }
} %}

{# Apply layout styles based on parameters #}
{% if display %}
  display: {{ display }};
{% endif %}

{% if position %}
  position: {{ position }};
{% endif %}

{% if max_width %}
  max-width: {{ layout_tokens.container[max_width] ?? max_width }};
{% endif %}

{% if width %}
  width: {{ layout_tokens.container[width] ?? width }};
{% endif %}

{% if height %}
  height: {{ height }};
{% endif %}

{% if grid_template_columns %}
  grid-template-columns: {{ layout_tokens.grid_columns[grid_template_columns] ?? grid_template_columns }};
{% endif %}

{% if grid_template_rows %}
  grid-template-rows: {{ grid_template_rows }};
{% endif %}

{% if grid_column %}
  grid-column: {{ grid_column }};
{% endif %}

{% if grid_row %}
  grid-row: {{ grid_row }};
{% endif %}

{% if gap %}
  gap: {{ layout_tokens.gaps[gap] ?? gap }};
{% endif %}

{% if row_gap %}
  row-gap: {{ layout_tokens.gaps[row_gap] ?? row_gap }};
{% endif %}

{% if column_gap %}
  column-gap: {{ layout_tokens.gaps[column_gap] ?? column_gap }};
{% endif %}

{% if justify_content %}
  justify-content: {{ layout_tokens.flex_justify[justify_content] ?? justify_content }};
{% endif %}

{% if align_items %}
  align-items: {{ layout_tokens.flex_align[align_items] ?? align_items }};
{% endif %}

{% if align_content %}
  align-content: {{ layout_tokens.flex_align[align_content] ?? align_content }};
{% endif %}

{% if justify_items %}
  justify-items: {{ layout_tokens.flex_justify[justify_items] ?? justify_items }};
{% endif %}

{% if flex_direction %}
  flex-direction: {{ layout_tokens.flex_direction[flex_direction] ?? flex_direction }};
{% endif %}

{% if flex_wrap %}
  flex-wrap: {{ layout_tokens.flex_wrap[flex_wrap] ?? flex_wrap }};
{% endif %}

{% if flex_grow %}
  flex-grow: {{ flex_grow }};
{% endif %}

{% if flex_shrink %}
  flex-shrink: {{ flex_shrink }};
{% endif %}

{% if flex_basis %}
  flex-basis: {{ flex_basis }};
{% endif %}

{% if z_index %}
  z-index: {{ layout_tokens.z_index[z_index] ?? z_index }};
{% endif %}

{% if aspect_ratio %}
  aspect-ratio: {{ layout_tokens.aspect_ratio[aspect_ratio] ?? aspect_ratio }};
{% endif %}

{% if overflow %}
  overflow: {{ overflow }};
{% endif %}

{% if overflow_x %}
  overflow-x: {{ overflow_x }};
{% endif %}

{% if overflow_y %}
  overflow-y: {{ overflow_y }};
{% endif %}