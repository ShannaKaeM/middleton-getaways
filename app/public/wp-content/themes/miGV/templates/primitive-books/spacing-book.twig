{#
  Spacing Primitive Book - Self-Sufficient Design Tokens
  
  This primitive contains actual spacing values, not CSS variable references.
  It is the single source of truth for spacing in the design system.
  
  Usage:
  {% include 'primitive-books/spacing-book.twig' with {
    padding: 'lg',
    margin: 'md',
    gap: 'sm'
  } %}
#}

{% set spacing_tokens = {
  spacing: {
    xs: '4px',
    sm: '8px',
    md: '12px',
    lg: '16px',
    xl: '20px',
    '2xl': '24px',
    '3xl': '32px',
    '4xl': '40px',
    '5xl': '48px',
    '6xl': '56px',
    '7xl': '64px',
    '8xl': '80px',
    '9xl': '96px',
    '10xl': '128px'
  }
} %}

{# Apply spacing styles based on parameters #}
{% if padding %}
  padding: {{ spacing_tokens.spacing[padding] ?? padding }};
{% endif %}

{% if padding_top %}
  padding-top: {{ spacing_tokens.spacing[padding_top] ?? padding_top }};
{% endif %}

{% if padding_bottom %}
  padding-bottom: {{ spacing_tokens.spacing[padding_bottom] ?? padding_bottom }};
{% endif %}

{% if padding_left %}
  padding-left: {{ spacing_tokens.spacing[padding_left] ?? padding_left }};
{% endif %}

{% if padding_right %}
  padding-right: {{ spacing_tokens.spacing[padding_right] ?? padding_right }};
{% endif %}

{% if margin %}
  margin: {{ spacing_tokens.spacing[margin] ?? margin }};
{% endif %}

{% if margin_top %}
  margin-top: {{ spacing_tokens.spacing[margin_top] ?? margin_top }};
{% endif %}

{% if margin_bottom %}
  margin-bottom: {{ spacing_tokens.spacing[margin_bottom] ?? margin_bottom }};
{% endif %}

{% if margin_left %}
  margin-left: {{ spacing_tokens.spacing[margin_left] ?? margin_left }};
{% endif %}

{% if margin_right %}
  margin-right: {{ spacing_tokens.spacing[margin_right] ?? margin_right }};
{% endif %}

{% if gap %}
  gap: {{ spacing_tokens.spacing[gap] ?? gap }};
{% endif %}
