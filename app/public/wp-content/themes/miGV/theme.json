{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "spacing": {
            "blockGap": true,
            "margin": true,
            "padding": true,
            "units": [
                "px",
                "em",
                "rem",
                "%",
                "vh",
                "vw"
            ]
        },
        "layout": {
            "contentSize": "1024px",
            "wideSize": "1280px"
        },
        "typography": {
            "fluid": true,
            "fontFamilies": [],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.8125em",
                    "name": "Small"
                },
                {
                    "slug": "medium",
                    "size": "1em",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "1.5em",
                    "name": "Large"
                },
                {
                    "slug": "x-large",
                    "size": "2em",
                    "name": "X Large"
                },
                {
                    "slug": "xx-large",
                    "size": "3em",
                    "name": "Xx Large"
                },
                {
                    "slug": "huge",
                    "size": "5em",
                    "name": "Huge"
                }
            ],
            "fontWeight": true,
            "lineHeight": true,
            "letterSpacing": true,
            "textTransform": true
        },
        "color": {
            "palette": [
                {
                    "slug": "primary-light",
                    "name": "Primary Light",
                    "color": "#d6dcd6"
                },
                {
                    "slug": "primary",
                    "name": "Primary",
                    "color": "#5a7b7c"
                },
                {
                    "slug": "primary-dark",
                    "name": "Primary Dark",
                    "color": "#3a5a59"
                },
                {
                    "slug": "secondary-light",
                    "name": "Secondary Light",
                    "color": "#c38484"
                },
                {
                    "slug": "secondary",
                    "name": "Secondary",
                    "color": "#975d55"
                },
                {
                    "slug": "secondary-dark",
                    "name": "Secondary Dark",
                    "color": "#853d2d"
                },
                {
                    "slug": "neutral-light",
                    "name": "Neutral Light",
                    "color": "#d1cfc2"
                },
                {
                    "slug": "neutral",
                    "name": "Neutral",
                    "color": "#b5b09f"
                },
                {
                    "slug": "neutral-dark",
                    "name": "Neutral Dark",
                    "color": "#8f8c7f"
                },
                {
                    "slug": "base-lightest",
                    "name": "Base Lightest",
                    "color": "#f7f6f3"
                },
                {
                    "slug": "base-light",
                    "name": "Base Light",
                    "color": "#e9e7e0"
                },
                {
                    "slug": "base",
                    "name": "Base",
                    "color": "#d9d6cc"
                },
                {
                    "slug": "base-dark",
                    "name": "Base Dark",
                    "color": "#b5b09f"
                },
                {
                    "slug": "base-darkest",
                    "name": "Base Darkest",
                    "color": "#8f8c7f"
                },
                {
                    "slug": "extreme-light",
                    "name": "Extreme Light",
                    "color": "#ffffff"
                },
                {
                    "slug": "extreme-dark",
                    "name": "Extreme Dark",
                    "color": "#000000"
                }
            ]
        },
        "custom": {
            "typography": {
                "baseStyles": {
                    "fontWeights": {
                        "regular": "400",
                        "medium": "500",
                        "semiBold": "600",
                        "bold": "700",
                        "extraBold": "900"
                    },
                    "lineHeights": {
                        "tight": "1.1",
                        "normal": "1.2",
                        "relaxed": "1.4",
                        "loose": "1.6"
                    },
                    "letterSpacing": {
                        "tight": "-0.025em",
                        "normal": "0em",
                        "wide": "0.075em",
                        "wider": "0.1em",
                        "widest": "0.2em"
                    },
                    "textTransforms": {
                        "none": "none",
                        "uppercase": "uppercase",
                        "lowercase": "lowercase",
                        "capitalize": "capitalize"
                    }
                }
            }
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--extreme-light)",
            "text": "var(--wp--preset--color--base-darkest)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--montserrat)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--primary-dark)"
                    },
                    "typography": {
                        "textDecoration": "underline"
                    }
                },
                ":focus": {
                    "color": {
                        "text": "var(--wp--preset--color--primary-dark)"
                    },
                    "outline": {
                        "color": "var(--wp--preset--color--primary)",
                        "offset": "2px",
                        "style": "solid",
                        "width": "2px"
                    }
                }
            },
            "button": {
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--extreme-light)"
                },
                "spacing": {
                    "padding": {
                        "top": "12px",
                        "right": "20px",
                        "bottom": "12px",
                        "left": "20px"
                    }
                },
                "border": {
                    "radius": "6px"
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--primary-dark)"
                    }
                },
                ":focus": {
                    "outline": {
                        "color": "var(--wp--preset--color--primary)",
                        "offset": "2px",
                        "style": "solid",
                        "width": "2px"
                    }
                }
            },
            "heading": {
                "color": {
                    "text": "var(--wp--preset--color--base-darkest)"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--playfair-display)",
                    "fontWeight": "600",
                    "lineHeight": "1.1"
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xx-large)"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)"
                }
            }
        },
        "blocks": {
            "core/paragraph": {
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "16px"
                    }
                }
            },
            "core/list": {
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "16px"
                    },
                    "padding": {
                        "left": "20px"
                    }
                }
            },
            "core/code": {
                "color": {
                    "background": "var(--wp--preset--color--base-lightest)",
                    "text": "var(--wp--preset--color--base-darkest)"
                },
                "typography": {
                    "fontFamily": "ui-monospace, SFMono-Regular, 'SF Mono', Consolas, 'Liberation Mono', Menlo, monospace",
                    "fontSize": "0.875em"
                },
                "spacing": {
                    "padding": {
                        "top": "4px",
                        "right": "8px",
                        "bottom": "4px",
                        "left": "8px"
                    }
                },
                "border": {
                    "radius": "4px"
                }
            }
        }
    },
    "custom": {
        "typography": {
            "baseStyles": {
                "fontWeights": {
                    "regular": "400",
                    "medium": "500",
                    "semiBold": "600",
                    "bold": "700",
                    "extraBold": "900"
                },
                "lineHeights": {
                    "tight": "1.1",
                    "normal": "1.2",
                    "relaxed": "1.4",
                    "loose": "1.6"
                },
                "letterSpacing": {
                    "tight": "-0.025em",
                    "normal": "0em",
                    "wide": "0.075em",
                    "wider": "0.1em",
                    "widest": "0.2em"
                },
                "textTransforms": {
                    "none": "none",
                    "uppercase": "uppercase",
                    "lowercase": "lowercase",
                    "capitalize": "capitalize"
                }
            }
        }
    }
}