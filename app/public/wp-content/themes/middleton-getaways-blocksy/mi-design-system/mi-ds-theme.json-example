{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "custom": {
      "tw4": {
        "enabled": true,
        "prefix": "",
        "colorPrefix": "color",
        "spacingPrefix": "spacing",
        "fontPrefix": "font",
        "textPrefix": "text",
        "shadowPrefix": "shadow",
        "radiusPrefix": "radius"
      }
    },
    "color": {
      "custom": true,
      "customDuotone": true,
      "customGradient": true,
      "defaultDuotone": false,
      "defaultGradients": false,
      "defaultPalette": false,
      "duotone": [],
      "gradients": [],
      "palette": [
        {
          "color": "var(--color-primary-light)",
          "name": "Primary Light",
          "slug": "primary-light"
        },
        {
          "color": "var(--color-primary)",
          "name": "Primary",
          "slug": "primary"
        },
        {
          "color": "var(--color-primary-dark)",
          "name": "Primary Dark",
          "slug": "primary-dark"
        },
        {
          "color": "var(--color-secondary-light)",
          "name": "Secondary Light",
          "slug": "secondary-light"
        },
        {
          "color": "var(--color-secondary)",
          "name": "Secondary",
          "slug": "secondary"
        },
        {
          "color": "var(--color-secondary-dark)",
          "name": "Secondary Dark",
          "slug": "secondary-dark"
        },
        {
          "color": "var(--color-neutral-light)",
          "name": "Neutral Light",
          "slug": "neutral-light"
        },
        {
          "color": "var(--color-neutral)",
          "name": "Neutral",
          "slug": "neutral"
        },
        {
          "color": "var(--color-neutral-dark)",
          "name": "Neutral Dark",
          "slug": "neutral-dark"
        },
        {
          "color": "var(--color-white)",
          "name": "White",
          "slug": "white"
        },
        {
          "color": "var(--color-black)",
          "name": "Black",
          "slug": "black"
        }
      ]
    },
    "spacing": {
      "customSpacingSize": true,
      "spacingScale": {
        "steps": 0
      },
      "spacingSizes": [
        {
          "size": "var(--spacing-1)",
          "slug": "xs",
          "name": "Extra Small"
        },
        {
          "size": "var(--spacing-2)",
          "slug": "sm",
          "name": "Small"
        },
        {
          "size": "var(--spacing-4)",
          "slug": "md",
          "name": "Medium"
        },
        {
          "size": "var(--spacing-6)",
          "slug": "lg",
          "name": "Large"
        },
        {
          "size": "var(--spacing-8)",
          "slug": "xl",
          "name": "Extra Large"
        },
        {
          "size": "var(--spacing-12)",
          "slug": "2xl",
          "name": "2X Large"
        },
        {
          "size": "var(--spacing-16)",
          "slug": "3xl",
          "name": "3X Large"
        },
        {
          "size": "var(--spacing-20)",
          "slug": "4xl",
          "name": "4X Large"
        },
        {
          "size": "var(--spacing-24)",
          "slug": "5xl",
          "name": "5X Large"
        }
      ],
      "units": ["px", "%", "em", "rem", "vw", "vh"]
    },
    "typography": {
      "customFontSize": true,
      "dropCap": true,
      "fluid": true,
      "fontFamilies": [
        {
          "fontFamily": "var(--font-sans)",
          "name": "Sans Serif",
          "slug": "sans"
        },
        {
          "fontFamily": "var(--font-serif)",
          "name": "Serif",
          "slug": "serif"
        },
        {
          "fontFamily": "var(--font-mono)",
          "name": "Monospace",
          "slug": "mono"
        }
      ],
      "fontSizes": [
        {
          "size": "var(--text-xs)",
          "slug": "xs",
          "name": "Extra Small"
        },
        {
          "size": "var(--text-sm)",
          "slug": "sm",
          "name": "Small"
        },
        {
          "size": "var(--text-base)",
          "slug": "base",
          "name": "Base"
        },
        {
          "size": "var(--text-lg)",
          "slug": "lg",
          "name": "Large"
        },
        {
          "size": "var(--text-xl)",
          "slug": "xl",
          "name": "Extra Large"
        },
        {
          "size": "var(--text-2xl)",
          "slug": "2xl",
          "name": "2X Large"
        },
        {
          "size": "var(--text-3xl)",
          "slug": "3xl",
          "name": "3X Large"
        },
        {
          "size": "var(--text-4xl)",
          "slug": "4xl",
          "name": "4X Large"
        },
        {
          "size": "var(--text-5xl)",
          "slug": "5xl",
          "name": "5X Large"
        }
      ],
      "fontWeight": true,
      "lineHeight": true
    },
    "shadow": {
      "defaultPresets": false,
      "presets": [
        {
          "name": "Small",
          "slug": "sm",
          "shadow": "var(--shadow-sm)"
        },
        {
          "name": "Base",
          "slug": "base",
          "shadow": "var(--shadow)"
        },
        {
          "name": "Medium",
          "slug": "md",
          "shadow": "var(--shadow-md)"
        },
        {
          "name": "Large",
          "slug": "lg",
          "shadow": "var(--shadow-lg)"
        },
        {
          "name": "Extra Large",
          "slug": "xl",
          "shadow": "var(--shadow-xl)"
        }
      ]
    },
    "border": {
      "radius": true,
      "color": true,
      "style": true,
      "width": true
    },
    "layout": {
      "contentSize": "var(--theme-normal-container-max-width)",
      "wideSize": "calc(var(--theme-normal-container-max-width) + var(--spacing-24))"
    }
  },
  "styles": {
    "color": {
      "background": "var(--color-white)",
      "text": "var(--color-neutral-dark)"
    },
    "typography": {
      "fontFamily": "var(--font-sans)",
      "fontSize": "var(--text-base)",
      "lineHeight": "1.6"
    },
    "spacing": {
      "blockGap": "var(--spacing-6)",
      "padding": {
        "top": "var(--spacing-0)",
        "right": "var(--spacing-0)",
        "bottom": "var(--spacing-0)",
        "left": "var(--spacing-0)"
      }
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--color-primary)"
        },
        ":hover": {
          "color": {
            "text": "var(--color-primary-dark)"
          }
        }
      },
      "button": {
        "color": {
          "background": "var(--color-primary)",
          "text": "var(--color-white)"
        },
        "typography": {
          "fontSize": "var(--text-base)",
          "fontWeight": "600"
        },
        "spacing": {
          "padding": {
            "top": "var(--spacing-3)",
            "right": "var(--spacing-6)",
            "bottom": "var(--spacing-3)",
            "left": "var(--spacing-6)"
          }
        },
        "border": {
          "radius": "var(--radius-md)"
        },
        ":hover": {
          "color": {
            "background": "var(--color-primary-dark)"
          }
        }
      }
    },
    "blocks": {
      "core/group": {
        "spacing": {
          "padding": {
            "top": "var(--spacing-6)",
            "right": "var(--spacing-6)",
            "bottom": "var(--spacing-6)",
            "left": "var(--spacing-6)"
          }
        }
      }
    }
  }
}
