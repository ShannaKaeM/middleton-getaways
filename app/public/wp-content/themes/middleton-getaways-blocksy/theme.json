{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "custom": {
      "windpress": {
        "enabled": "true",
        "cssVariables": "true"
      }
    },
    "color": {
      "custom": true,
      "customDuotone": true,
      "customGradient": true,
      "defaultDuotone": false,
      "defaultGradients": false,
      "defaultPalette": false,
      "duotone": [],
      "gradients": [],
      "palette": [
        {
          "color": "var(--color-primary-600)",
          "name": "Primary 600",
          "slug": "primary-600"
        },
        {
          "color": "var(--color-primary-700)",
          "name": "Primary 700",
          "slug": "primary-700"
        },
        {
          "color": "var(--color-primary-500)",
          "name": "Primary 500",
          "slug": "primary-500"
        },
        {
          "color": "var(--color-secondary-600)",
          "name": "Secondary 600",
          "slug": "secondary-600"
        },
        {
          "color": "var(--color-secondary-700)",
          "name": "Secondary 700",
          "slug": "secondary-700"
        },
        {
          "color": "var(--color-secondary-500)",
          "name": "Secondary 500",
          "slug": "secondary-500"
        },
        {
          "color": "var(--color-neutral-500)",
          "name": "Neutral 500",
          "slug": "neutral-500"
        },
        {
          "color": "var(--color-neutral-700)",
          "name": "Neutral 700",
          "slug": "neutral-700"
        },
        {
          "color": "var(--color-neutral-300)",
          "name": "Neutral 300",
          "slug": "neutral-300"
        },
        {
          "color": "var(--color-base-800)",
          "name": "Base 800",
          "slug": "base-800"
        },
        {
          "color": "var(--color-base-600)",
          "name": "Base 600",
          "slug": "base-600"
        },
        {
          "color": "var(--color-base-900)",
          "name": "Base 900",
          "slug": "base-900"
        },
        {
          "color": "var(--color-surface)",
          "name": "Surface",
          "slug": "surface"
        },
        {
          "color": "var(--color-canvas)",
          "name": "Canvas",
          "slug": "canvas"
        },
        {
          "color": "var(--color-border)",
          "name": "Border",
          "slug": "border"
        }
      ]
    },
    "spacing": {
      "customSpacingSize": true,
      "spacingScale": {
        "steps": 0
      },
      "spacingSizes": [
        {
          "name": "XS",
          "size": "var(--spacing-xs)",
          "slug": "xs"
        },
        {
          "name": "SM",
          "size": "var(--spacing-sm)",
          "slug": "sm"
        },
        {
          "name": "MD",
          "size": "var(--spacing-md)",
          "slug": "md"
        },
        {
          "name": "LG",
          "size": "var(--spacing-lg)",
          "slug": "lg"
        },
        {
          "name": "XL",
          "size": "var(--spacing-xl)",
          "slug": "xl"
        },
        {
          "name": "2XL",
          "size": "var(--spacing-2xl)",
          "slug": "2xl"
        },
        {
          "name": "3XL",
          "size": "var(--spacing-3xl)",
          "slug": "3xl"
        }
      ],
      "units": [
        "px",
        "em",
        "rem",
        "vh",
        "vw",
        "%"
      ]
    },
    "typography": {
      "customFontSize": true,
      "dropCap": true,
      "fluid": true,
      "fontFamilies": [
        {
          "fontFamily": "var(--font-sans)",
          "name": "Sans Serif",
          "slug": "sans"
        },
        {
          "fontFamily": "var(--font-serif)",
          "name": "Serif",
          "slug": "serif"
        },
        {
          "fontFamily": "var(--font-mono)",
          "name": "Monospace",
          "slug": "mono"
        }
      ],
      "fontSizes": [
        {
          "name": "XS",
          "size": "var(--font-size-xs)",
          "slug": "xs"
        },
        {
          "name": "SM",
          "size": "var(--font-size-sm)",
          "slug": "sm"
        },
        {
          "name": "Base",
          "size": "var(--font-size-base)",
          "slug": "base"
        },
        {
          "name": "LG",
          "size": "var(--font-size-lg)",
          "slug": "lg"
        },
        {
          "name": "XL",
          "size": "var(--font-size-xl)",
          "slug": "xl"
        },
        {
          "name": "2XL",
          "size": "var(--font-size-2xl)",
          "slug": "2xl"
        },
        {
          "name": "3XL",
          "size": "var(--font-size-3xl)",
          "slug": "3xl"
        }
      ],
      "fontWeight": true,
      "lineHeight": true
    },
    "shadow": {
      "defaultPresets": false,
      "presets": [
        {
          "name": "SM",
          "shadow": "var(--shadow-sm)",
          "slug": "sm"
        },
        {
          "name": "MD",
          "shadow": "var(--shadow-md)",
          "slug": "md"
        },
        {
          "name": "LG",
          "shadow": "var(--shadow-lg)",
          "slug": "lg"
        },
        {
          "name": "XL",
          "shadow": "var(--shadow-xl)",
          "slug": "xl"
        }
      ]
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--canvas)",
      "text": "var(--wp--preset--color--base-text)"
    },
    "typography": {
      "fontSize": "var(--wp--preset--font-size--md)",
      "lineHeight": "1.6"
    },
    "spacing": {
      "blockGap": "var(--spacing-6)",
      "padding": {
        "top": "var(--spacing-0)",
        "right": "var(--spacing-0)",
        "bottom": "var(--spacing-0)",
        "left": "var(--spacing-0)"
      }
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--color-primary-600)"
        },
        ":hover": {
          "color": {
            "text": "var(--color-primary-700)"
          }
        }
      },
      "button": {
        "color": {
          "background": "var(--color-primary-600)",
          "text": "var(--color-white)"
        },
        "typography": {
          "fontSize": "var(--text-base)",
          "fontWeight": "600"
        },
        "spacing": {
          "padding": {
            "top": "var(--spacing-3)",
            "right": "var(--spacing-6)",
            "bottom": "var(--spacing-3)",
            "left": "var(--spacing-6)"
          }
        },
        "border": {
          "radius": "var(--radius-md)"
        },
        ":hover": {
          "color": {
            "background": "var(--color-primary-700)"
          }
        }
      }
    },
    "blocks": {
      "core/group": {
        "spacing": {
          "padding": {
            "top": "var(--spacing-6)",
            "right": "var(--spacing-6)",
            "bottom": "var(--spacing-6)",
            "left": "var(--spacing-6)"
          }
        }
      }
    }
  }
}
